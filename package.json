{
  "name": "formvalidation.io",
  "description": "FormValidation official website",
  "version": "1.3.0",
  "scripts": {
    "dev": "node --max-old-space-size=4096 node_modules/.bin/sapper dev",
    "start": "node build",
    "sapper": "node --max-old-space-size=4096 node_modules/.bin/sapper build",
    "predeploy": "npm run sapper",
    "deploy": "rm -rf build/client_info.json && now",
    "copy": "npm run copy:css && npm run copy:js",
    "copy:css": "rm -rf assets/vendors/formvalidation/*.* && cp -r ../formvalidation-src/dist/css assets/vendors/formvalidation",
    "copy:js": "rm -rf vendors/formvalidation/*.* && cp -r ../formvalidation-src/dist/es6/* vendors/formvalidation"
  },
  "devDependencies": {
    "css-loader": "^1.0.0",
    "style-loader": "^0.21.0",
    "svelte": "^2.9.1",
    "svelte-loader": "^2.9.1",
    "webpack": "^4.15.1"
  },
  "dependencies": {
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "sapper": "^0.14.1",
    "serve-static": "^1.13.2"
  },
  "now": {
    "name": "fv-io",
    "env": {
      "NODE_ENV": "production"
    },
    "files": [
      "build",
      "assets"
    ]
  }
}
